[client]
port = 3306
socket = /var/run/mysqld/mysqld.sock

[isamchk]
key_buffer_size = 16M

[mysqld]
#server-id = 12345
basedir = /usr
#bind-address = foo
binlog_format = ROW
log_bin=/var/log/mysql/mysql-bin.log
expire_logs_days=4
max_binlog_size=100M
character-set-server = utf8
collation-server = utf8_general_ci
datadir = /var/lib/mysql
default-storage-engine = innodb
ignore-db-dir = lost+found
init-connect = SET NAMES utf8
innodb_autoinc_lock_mode = 2
innodb_buffer_pool_size = 400M
innodb_doublewrite = 0
innodb_file_format = Barracuda
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_io_capacity = 500
innodb_locks_unsafe_for_binlog = 1
innodb_log_file_size = 80M
innodb_read_io_threads = 8
innodb_write_io_threads = 8
key_buffer_size = 64
log-error = /var/log/mysql/error.log
max_allowed_packet = 256M
max_connections = 2048
myisam_recover = BACKUP
myisam_sort_buffer_size = 64M
open_files_limit = 102400
performance_schema = off
pid-file = /var/run/mysqld/mysqld.pid
port = 3306
query_cache_limit = 1M
query_cache_size = 0
query_cache_type = 0
skip-external-locking
skip-name-resolve
socket = /var/run/mysqld/mysqld.sock
ssl = false
ssl-ca = /etc/mysql/cacert.pem
ssl-cert = /etc/mysql/server-cert.pem
ssl-key = /etc/mysql/server-key.pem
table_open_cache = 10000
thread_cache_size = 8
thread_stack = 256K
tmpdir = /tmp
user = mysql
wait_timeout = 1800
#wsrep_cluster_address = "gcomm://foo,bar"
wsrep_cluster_name = mysql
#wsrep_node_address = foo
#wsrep_node_incoming_address = foo
wsrep_provider = /usr/lib/galera/libgalera_smm.so
#wsrep_provider_options = "gcache.size=256M; gmcast.listen_addr=tcp://foo:4567"
wsrep_slave_threads = 4
wsrep_sst_auth = "root:root"
#wsrep_sst_method = xtrabackup-v2
#wsrep_sst_receive_address = foo

[mysqld_safe]
log-error = /var/log/mysql/error.log
nice = 0
socket = /var/run/mysqld/mysqld.sock

[mysqldump]
max_allowed_packet = 16M
quick
quote-names

[sst]
sockopts = nodelay,sndbuff=1048576,rcvbuf=1048576
streamfmt = xbstream
transferfmt = socat

[xtrabackup]
parallel = 2
